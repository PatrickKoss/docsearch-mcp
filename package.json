{
  "name": "docsearch-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev:ingest": "tsx src/ingest/cli.ts",
    "dev:mcp": "tsx src/server/mcp.ts",
    "dev:cli": "tsx src/cli/main.ts",
    "start:mcp": "node dist/src/server/mcp.js",
    "start:ingest": "node dist/src/ingest/cli.js",
    "start:cli": "node dist/src/cli/main.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:unit": "vitest run --exclude test/integrations",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md}'",
    "format:check": "prettier --check '**/*.{ts,tsx,js,jsx,json,md}'",
    "typecheck": "tsc --noEmit",
    "typecheck:src": "tsc --noEmit --project tsconfig.src.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@types/pg": "^8.15.5",
    "better-sqlite3": "^9.4.3",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fast-glob": "^3.3.2",
    "js-yaml": "^4.1.0",
    "openai": "^4.59.0",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "pgvector": "^0.2.1",
    "sqlite-vec": "^0.1.7-alpha.2",
    "turndown": "^7.2.0",
    "undici": "^6.19.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@testcontainers/postgresql": "^11.5.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "testcontainers": "^11.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  }
}
